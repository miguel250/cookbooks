server {
  listen   80;

  root <%= @app_path %>;
	
  index index.html;

  server_name <%= node['web']['domain']  %>;

  if ($http_user_agent ~* (HTTrack|HTMLParser|libcurl|discobot|Exabot|Casper|kmccrew|plaNETWORK|RPT-HTTPClient)) {
    return 444;
  }


  if ($http_referer ~* (sex|vigra|viagra) ) {
    return 444;
  }

  ## Deny dot files:
  location ~ /\. {
    deny all;
  }

  ## Favicon Not Found
  location = /favicon.ico {
    access_log off;
    log_not_found off;
  }

  ## Robots.txt Not Found
  location = /robots.txt {
    access_log off;
    log_not_found off;
  }
}